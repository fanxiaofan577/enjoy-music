<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:elevation="@dimen/dp_20"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="80dp">

            <LinearLayout
                android:id="@+id/imageLinear"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <cn.tiancaifan.enjoy_music.ui.widget.NiceImageView
                        android:id="@+id/search_info_album_image"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:src="@drawable/player_mask"
                        app:corner_radius="12dp" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/search_info_album_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/imageLinear"
                android:ellipsize="end"
                android:lines="1"
                android:text="生生不息"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/search_info_album_artist_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/search_info_album_name"
                android:layout_marginLeft="20dp"
                android:ellipsize="end"
                android:lines="1"
                android:layout_toRightOf="@+id/imageLinear"

                android:text="林俊杰" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>